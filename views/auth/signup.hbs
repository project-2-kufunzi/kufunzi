<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container">
  <label for="email">Email</label>
  <input id="email" type="email" name="email" placeholder="JonSnow@winter">

  <br><br>

  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">
  <br>
  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <br>

  <label for="name">Name</label>
  <input id="name" type="text" name="name" placeholder="JonSnow">

  <br><br>

  <label for="phone">Phone</label>
  <input id="phone" type="text" name="phone" placeholder="999999999">

  <br><br>


  <button type="submit">Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>